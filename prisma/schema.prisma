generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    USER
    ADMIN
    EDITOR
}

enum Gender {
    MALE
    FEMALE
    NON_BINARY
}

model User {
    id Int @id @default(autoincrement())

    // meta
    email    String    @unique
    password String
    name     String?
    surname  String?
    gender   Gender?
    dob      DateTime? @db.Date
    role     Role      @default(USER)

    // date times
    created_at DateTime  @default(now())
    update_at  DateTime  @updatedAt
    deleted_at DateTime?

    // relations
    books Book[]
}

model Book {
    id Int @id @default(autoincrement())

    user_id Int

    title       String
    description String
    price       Float

    // date times
    created_at DateTime  @default(now())
    update_at  DateTime  @updatedAt
    deleted_at DateTime?

    // relations
    user User @relation(fields: [user_id], references: [id])
}
